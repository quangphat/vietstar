
@{
    ViewData["Title"] = "UnAuthorize";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="error-page">
        <h2 class="headline text-yellow"> 401</h2>

        <div class="error-content">
            <h3><i class="fa fa-warning text-yellow"></i> Oops! Bạn không có quyền</h3>

            <p>
                Bạn không có quyền truy cập vào tính năng này. <a href="/Home">Trở lại trang chủ</a> hoặc liên hệ với admin.
            </p>
            <textarea readonly style="width:100%">@ViewBag.unAuthorizedUrl</textarea>
            <textarea readonly style="width:100%">@ViewBag.user</textarea>
            
        </div>
        <!-- /.error-content -->
    </div>
    <!-- /.error-page -->
</section>

